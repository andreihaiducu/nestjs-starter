{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./dist",
      "skipLibCheck": true
  },
  "include": [
      "."
  ],
  "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts"
  ]
}